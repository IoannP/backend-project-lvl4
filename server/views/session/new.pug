extends ../layouts/application.pug

block header
  = t('views.session.new.signIn')

block content
  +formFor()(action=route('session') method='post')
    +input(signInForm, 'email', t('views.form.email'), errors)(type="text")
    +input(signInForm, 'password', t('views.form.password'), label )(type="password")
    +submit(signInForm)(value=t('views.session.new.submit'))