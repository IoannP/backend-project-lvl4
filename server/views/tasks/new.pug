extends ../layouts/application.pug

block header
  = t('views.tasks.new.create')

block content
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', t('views.tasks.new.name'), errors)(type="text")
    .form-group
        label(for="data_description")= t('views.tasks.new.description')
        textarea.form-control(id="data_description" name="data[description]" rows="3")
    +select(task, statuses, 'statusId', t('views.tasks.new.status'), errors)
    +select(task, performers, 'performerId', t('views.tasks.new.performer'), errors)
    +select(task, labels, 'labels', t('views.tasks.new.marking'), errors)(multiple="multiple")
    +submit()(value=t('views.tasks.new.submit'))