extends ../layouts/application.pug

block header
  = t('views.users.edit.edit')

block content
  +formFor()(action=`/users/${user.id}` method="post")
    +input(user, 'firstname', t('views.form.firstname'), errors)(type="text")
    +input(user, 'lastname', t('views.form.lastname'), errors)(type="text")
    +input(user, 'email', t('views.form.email'), errors)(type="email")
    +input({}, 'password', t('views.form.password'), errors)(type="password")
    input(name="_method" type="hidden" value="patch")
    +submit()(value=t('views.users.edit.submit'))